# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000
CORS_ORIGIN=*

# Database Configuration
# Options: sqlite, sqlserver, postgresql, cosmosdb, azurestorage
DB_TYPE=sqlite

# SQLite Configuration (default)
DB_PATH=./urls.db

# SQL Server Configuration
# DB_CONNECTION_STRING=Server=your-server;Database=urlshortener;User Id=your-username;Password=your-password;TrustServerCertificate=true

# PostgreSQL Configuration  
# DB_CONNECTION_STRING=postgresql://username:password@hostname:5432/database

# Cosmos DB Configuration
# DB_CONNECTION_STRING=AccountEndpoint=https://your-account.documents.azure.com:443/;AccountKey=your-cosmos-db-key;
# COSMOSDB_DATABASE=UrlShortenerDB
# COSMOSDB_CONTAINER=UrlShortenerContainer
# 
# Legacy Cosmos DB Environment Variables (for backward compatibility)
# COSMOS_DB_DATABASE=urlshortener
# COSMOS_DB_CONTAINER=urls

# Azure Storage Tables Configuration
# AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
# AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
# AZURE_STORAGE_TABLE_NAME=urls

# Static files path (for combined deployments)
# STATIC_PATH=../frontend
